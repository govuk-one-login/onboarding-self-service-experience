{
  "name": "gds-di-onboarding-frontend",
  "description": "DI self-service frontend",
  "scripts": {
    "start": "node dist/app.js",
    "local": "npm run build && node --inspect -r 'dotenv/config' dist/app.js",
    "dev": "COGNITO_CLIENT=${COGNITO_CLIENT:-StubCognitoClient} LAMBDA_FACADE=${LAMBDA_FACADE:-StubLambdaFacade} nodemon --config nodemon.json --inspect -r 'dotenv/config' src/app.ts",
    "minifyjs": "for script in dist/assets/*.js; do uglifyjs $script -cmo $script; done",
    "buildts": "tsc $(${CI:-false} && echo --sourceMap false)",
    "buildsass": "node-sass --output-style compressed --importer $(npm ls -p node-sass-package-importer)/dist/cli.js --include-path $(npm ls -p govuk-frontend)/.. assets/css/app.scss dist/assets/app.css $(${CI:-false} || echo --source-map true --source-map-contents)",
    "buildjs": "cp -vr assets/javascripts/* dist/assets/ && ${CI:-false} && npm run minifyjs || true",
    "buildgovuk": "cp -vr $(npm ls -p govuk-frontend)/govuk/assets/* dist/assets/ && cp -v $(npm ls -p govuk-frontend)/govuk/all.js dist/assets/govuk-all.js",
    "buildlocalimages": "cp -vr assets/images/* dist/assets/images",
    "build": "npm run buildts && npm run buildsass && npm run buildgovuk && npm run buildjs && npm run buildlocalimages",
    "test": "jest --silent",
    "cucumber": "cucumber-js --require-module ts-node/register --require features/support/test-setup.ts --require features/support/steps/**/*.ts --publish-quiet --tags 'not @wip'",
    "cucumber-report": "npm run cucumber -- --format html:test-report.html"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.169.0",
    "@aws-sdk/util-dynamodb": "^3.169.0",
    "@aws-sdk/client-sns": "^3.169.0",
    "aws-jwt-verify": "^3.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-async-errors": "^3.1.1",
    "node-sass-package-importer": "^5.3.2",
    "rfc822-validate": "^1.0.0",
    "govuk-frontend": "^4.3.1",
    "cookie-parser": "^1.4.6",
    "nodemon": "^2.0.19",
    "nunjucks": "^3.2.3",
    "axios": "^0.27.2"
  },
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@types/uuid": "^8.3.4",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/puppeteer": "^5.4.6",
    "@types/nunjucks": "^3.2.1",
    "@types/jest": "^29.0.0",
    "@types/chai": "^4.3.3",
    "@cucumber/cucumber": "^8.5.2",
    "puppeteer": "^17.0.0",
    "node-sass": "^7.0.1",
    "uglify-js": "^3.17.0",
    "ts-node": "^10.9.1",
    "dotenv": "^16.0.1",
    "chai": "^4.3.6"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
