{% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

{% set cookiesMessageHtml %}
  <p class="govuk-body">We’d like to use analytics cookies so we can understand how you use this website and make improvements.</p>
{% endset %}

{% set acceptMessageHtml %}
  <p class="govuk-body">You’ve accepted analytics cookies. You can <a class="govuk-link" href="https://www.sign-in.service.gov.uk/cookies">change your cookie settings</a> at any time.</p>
{% endset %}

{% set rejectMessageHtml %}
  <p class="govuk-body">You’ve rejected analytics cookies. You can <a class="govuk-link" href="https://www.sign-in.service.gov.uk/cookies">change your cookie settings</a> at any time.</p>
{% endset %}

{{ govukCookieBanner({
  ariaLabel: "Cookies on GOV.UK One Login",
  name: "gov-uk-cookie-banner",
  messages: [
    {
      headingText: "Cookies on GOV.UK One Login",
      html: cookiesMessageHtml,
      attributes: {
      id: "cookies-banner-main"
    },
      actions: [
      {
        text: "Accept analytics cookies",
        type: "button",
        name: "cookiesAccept",
        value: "accept"
      },
      {
        text: "Reject analytics cookies",
        type: "button",
        name: "cookiesReject",
        value: "reject"
      },
      {
        text: "View cookies",
        href: "https://www.sign-in.service.gov.uk/cookies"
      }
    ]
    },
    {
      html: acceptMessageHtml,
      role: "alert",
      attributes: {
      id: "cookies-accepted"
    },
      actions: [
      {
        text: "Hide this message",
        classes: "cookie-hide-button",
        href: "#",
        type: "button"
      }
    ],
      hidden: true
    },
    {
      html: rejectMessageHtml,
      role: "alert",
      attributes: {
      id: "cookies-rejected"
    },
      actions: [
      {
        text: "Hide this message",
        classes: "cookie-hide-button",
        href: "#",
        type: "button"
      }
    ],
      hidden: true
    }
  ], hidden: false
}) }}
