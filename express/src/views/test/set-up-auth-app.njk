{% extends "layouts/form.njk" %}

{% set pageTitle = "Set up an authenticator app" %}
{% set backLinkPath = "/choose-security-codes" %}

{% block beforeForm %}
  <h1 class="govuk-heading-l">Set up an authenticator app</h1>
  <p class="govuk-body">We will need a 6 digit security code from your authenticator app every time you sign in.</p>
  <p class="govuk-body">1. Scan the code below using an authentication app on your phone.</p>
  <p class="govuk-body">
    <img src="{{qrCodeUrl}}" alt="QR Code Image" id="qrCodeImage">
  </p>
  <p class="govuk-body">Or, enter this key into your authentication app:</p>
  <p class="govuk-body govuk-!-font-weight-bold">1234-5678-1234-5678-1234-5678-1234-5678</p>
{% endblock %}

{% block formInputs %}
  {{ form.securityCodeInput("2. Enter the 6 digit code generated by the authentication app on your phone.") }}
{% endblock %}

{% block afterForm %}
  <p class="govuk-body">If you cannot set up two factor authentication, contact us using our <a class="govuk-link" href="https://www.sign-in.service.gov.uk/contact-us">support form</a>.</p>
{% endblock %}
