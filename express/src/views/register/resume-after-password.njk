{% extends "layouts/form.njk" %}

{% set headerActiveItem = "sign-in" %}
{% set pageTitle = pageTitle | default("Enter your password") %}
{% set backLinkPath = backLinkPath | default("/sign-in") %}

{% block beforeForm %}
  <h1 class="govuk-heading-l">{{ pageTitle }}</h1>
{% endblock %}

{% block formInputs %}
  {{ form.passwordInput("Password") }}
{% endblock %}

{% block afterForm %}
  <p class="govuk-body"><a class="govuk-link" href="/sign-in/forgot-password">Forgot your password?</a></p>
{% endblock %}

{% block scripts %}
  <script src="/assets/javascripts/show-password.js"></script>
{% endblock %}
