{% extends "layout/form.njk" %}

{% set pageTitle = "Create a new password" %}
{% set backLinkPath = "/check-email-password-reset" %}

{% block beforeForm %}
  <h1 class="govuk-heading-l">Create a new password</h1>
  <p class="govuk-body">You can now create a new password for your account.</p>
{% endblock %}

{% block formInputs %}
  {{ form.passwordInput(hint = "Must be at least 8 characters. Do not use very common passwords, like ‘password’.") }}
  {{ form.hiddenInput("userName", userName) }}
  {{ form.hiddenInput("confirmationCode", confirmationCode) }}
{% endblock %}

{% block scripts %}
  <script src="/assets/javascripts/show-password.js"></script>
{% endblock %}
