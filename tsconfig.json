{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "moduleResolution": "Node",
    "removeComments": true,
    "noUnusedLocals": true,
    "baseUrl": "./"
  },
  "files": [],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "acceptance-tests"
    },
    {
      "path": "backend/api"
    },
    {
      "path": "express"
    }
  ]
}
