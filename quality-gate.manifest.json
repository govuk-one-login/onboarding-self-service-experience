{
    "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.1.0/schemas/schema.json",
    "services": [
      {
        "service-tag": "orchestration",
        "quality-gates": [
          {
            "check-types": ["code style and linting"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/test.yml",
              "path": "jobs.run-checkov"
            }
          },
          {
            "check-types": ["code style and linting"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/test.yml",
              "path": "jobs.check-shell-scripts"
            }
          },
          {
            "check-types": ["code style and linting"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/test.yml",
              "path": "jobs.check-linting"
            }
          },
          {
            "check-types": ["vulnerability detection"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/test.yml",
              "path": "jobs.check-vulnerabilities"
            }
          },
          {
            "check-types": ["code quality", "unit test coverage"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/test.yml",
              "path": "jobs.sonarcloud"
            }
          },
          {
            "check-types": ["unit"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/test.yml",
              "path": "jobs.run-unit-tests"
            }
          },
          {
            "check-types": ["contract"],
            "provider": "GitHub",
            "phase": "pre-merge",
            "config": {
              "file": ".github/workflows/deploy-contract.yml",
              "path": "jobs.contract-testing"
            }
          },
          {
            "check-types": ["contract"],
            "provider": "GitHub",
            "phase": "pre-upload",
            "config": {
              "file": ".github/workflows/deploy-contract.yml",
              "path": "jobs.contract-testing"
            }
          }
        ]
      }
    ]
  }
  