{
  "default": {
    "tags": "@ci and @smoke",
    "failFast": true,
    "requireModule": [
      "ts-node/register"
    ],
    "require": [
      "support/test-setup.ts",
      "support/steps/**/*.ts"
    ],
    "format":  [
      "progress",
      "html:reports/cucumber-report.html",
      "usage:reports/cucumber-usage.txt",
      "json:reports/cucumber-report.json"
    ]
  }
}
